@model EntityLayer.Concrete.Blog

@{
    ViewData["Title"] = "EditBlog";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Blog Düzenleme Sayfası</h1>


@using (Html.BeginForm("EditBlog", "Blog", FormMethod.Post))
{
    @Html.Label("Blog ID")
    @Html.TextBoxFor(x => x.BlogID, new { @class = "form-control" })
    @Html.Label("Blog Başlığı")
    @Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control" })
    @Html.Label("Blog Thumbnail URL")
    @Html.TextBoxFor(x => x.BlogThumbnailImaget, new { @class = "form-control" })
    @Html.Label("Blog Görseli")
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
    @Html.Label("Blog Kategori")
    @*@Html.TextBoxFor(x=>x.Category.CategoryName, new {@class="form-control"})*@
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.t, new { @class = "form-control" })
    @Html.Label("Blog İçeriği")
    @Html.TextAreaFor(x => x.BlogContent, 10, 3, new { @class = "form-control" })
}
